<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>sample-servlet</servlet-name>
        <servlet-class>com.sample.servlet.SampleController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sample-servlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>user-servlet</servlet-name>
        <servlet-class>com.sample.servlet.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>user-servlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
</web-app>